{
    "compilerOptions": {
      "outDir": "./dist/esm",
      // "noImplicitAny": true,
      // "strict": true,
      "target": "ES6",
      "module": "ES6",
      // add d.ts type files
      "declaration": true,
      // add source map files
      "sourceMap": true,
      // allow JS imports and check against TS out of the box type definitions
      "allowJs": true,
      "checkJs": true,
      // find modules "Ã  la Node.js" ie: node_modules
      "moduleResolution": "node",
      // silence some TS warning when running jest
      "esModuleInterop": true,
    },
    "exclude": [
      "./bkp"
    ],
    "include": [
      "./src"
    ]
  }